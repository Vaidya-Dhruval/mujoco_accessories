<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="ur5e">

  <!-- Include the macro and ROS 2 control definitions -->
  <xacro:include filename="$(find mujoco_accessories)/urdf/ur5e_macro.xacro"/>
  <xacro:include filename="$(find mujoco_accessories)/urdf/ur5e_ros2_control.xacro"/>

  <!-- Apply the macros directly with no prefix -->
  <xacro:ur5e_macro />
  <xacro:ur5e_ros2_control />

</robot>
