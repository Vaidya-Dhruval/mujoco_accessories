<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="ur5e_macro">
  <xacro:arg name="prefix" default=""/>
  <xacro:property name="arm_length" value="1.0"/>

  <!-- Base Link -->
  <link name="${prefix}base_link">
    <visual>
      <geometry><box size="0.2 0.2 0.1"/></geometry>
      <material name="gray"><color rgba="0.5 0.5 0.5 1"/></material>
    </visual>
  </link>

  <!-- Shoulder Pan -->
  <joint name="${prefix}shoulder_pan_joint" type="revolute">
    <parent link="${prefix}base_link"/>
    <child link="${prefix}shoulder_link"/>
    <origin xyz="0 0 0.1" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14" upper="3.14" effort="100" velocity="1.5"/>
  </joint>

  <link name="${prefix}shoulder_link">
    <visual>
      <geometry><cylinder length="0.2" radius="0.05"/></geometry>
      <material name="blue"><color rgba="0.0 0.4 1.0 1"/></material>
    </visual>
  </link>

  <joint name="${prefix}shoulder_lift_joint" type="revolute">
    <parent link="${prefix}shoulder_link"/>
    <child link="${prefix}upper_arm_link"/>
    <origin xyz="0 0 0.2" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-3.14" upper="3.14" effort="100" velocity="1.5"/>
  </joint>

  <link name="${prefix}upper_arm_link">
    <visual>
      <geometry><cylinder length="0.4" radius="0.04"/></geometry>
      <material name="green"><color rgba="0.2 1.0 0.2 1"/></material>
    </visual>
  </link>

  <joint name="${prefix}elbow_joint" type="revolute">
    <parent link="${prefix}upper_arm_link"/>
    <child link="${prefix}forearm_link"/>
    <origin xyz="0 0 0.4" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-3.14" upper="3.14" effort="100" velocity="1.5"/>
  </joint>

  <link name="${prefix}forearm_link">
    <visual>
      <geometry><cylinder length="0.4" radius="0.04"/></geometry>
      <material name="red"><color rgba="1.0 0.2 0.2 1"/></material>
    </visual>
  </link>

  <joint name="${prefix}wrist_1_joint" type="revolute">
    <parent link="${prefix}forearm_link"/>
    <child link="${prefix}wrist_1_link"/>
    <origin xyz="0 0 0.4" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-3.14" upper="3.14" effort="100" velocity="1.5"/>
  </joint>

  <link name="${prefix}wrist_1_link">
    <visual>
      <geometry><cylinder length="0.2" radius="0.04"/></geometry>
      <material name="purple"><color rgba="0.5 0.0 0.5 1"/></material>
    </visual>
  </link>

  <joint name="${prefix}wrist_2_joint" type="revolute">
    <parent link="${prefix}wrist_1_link"/>
    <child link="${prefix}wrist_2_link"/>
    <origin xyz="0 0 0.2" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-3.14" upper="3.14" effort="100" velocity="1.5"/>
  </joint>

  <link name="${prefix}wrist_2_link">
    <visual>
      <geometry><cylinder length="0.2" radius="0.04"/></geometry>
      <material name="yellow"><color rgba="1.0 1.0 0.0 1"/></material>
    </visual>
  </link>

  <joint name="${prefix}wrist_3_joint" type="revolute">
    <parent link="${prefix}wrist_2_link"/>
    <child link="${prefix}wrist_3_link"/>
    <origin xyz="0 0 0.2" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-3.14" upper="3.14" effort="100" velocity="1.5"/>
  </joint>

  <link name="${prefix}wrist_3_link">
    <visual>
      <geometry><cylinder length="0.2" radius="0.04"/></geometry>
      <material name="orange"><color rgba="1.0 0.5 0.0 1"/></material>
    </visual>
  </link>
</robot>
