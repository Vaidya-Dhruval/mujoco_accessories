<mujoco model="ur5e_sim">
  <include file="../mujoco/descriptions/ur5e/ur5e_globals.xml"/>
  <!-- Or use this if you're mounting on a rail -->
  <!-- <include file="../mujoco/descriptions/ur5e/ur5e_linear_rail_globals.xml"/> -->

  <compiler meshdir="../meshes/ur5e"/>
  <option gravity="0 0 -9.81" timestep="0.002"/>

  <asset>
    <material name="black" rgba="0.1 0.1 0.1 1"/>
    <texture name="groundplane" type="2d" builtin="checker" width="512" height="512" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3" />
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
  </asset>

  <worldbody>
    <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>

    <geom
      name="floor"
      pos="0 0 -0.025"
      size="0 0 0.05"
      type="plane"
      material="groundplane"
      friction="1.0 0.005 0.0001"
      contype="1"
      conaffinity="1"
    />

    <include file="../mujoco/descriptions/ur5e/ur5e.xml"/>
    <!-- or if using rail:
    <include file="../mujoco/descriptions/ur5e/ur5e_linear_rail.xml"/>
    -->
  </worldbody>
</mujoco>
